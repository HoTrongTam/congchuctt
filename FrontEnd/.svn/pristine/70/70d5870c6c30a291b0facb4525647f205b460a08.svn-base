        <div class="list" ng-if="step === 1">
            <label class="item item-input item-stacked-label">
                <input type="text" ng-model="form_register.UserName" placeholder="Nhập tên tài khoản" autofocus />
                <span class="input-label">Tài khoản</span>
            </label>
            <label class="item item-input item-stacked-label">
                <input type="password" ng-model="form_register.Password" placeholder="Nhập mật khẩu" />
                <span class="input-label">Mật khẩu</span>
            </label>
            <label class="item item-input item-stacked-label">
                <span class="assertive" ng-if="!password_match">Mật khẩu không giống</span>
                <input type="password" ng-model="form_register.password_match" placeholder="Nhập lại mật khẩu" ng-blur="checkPassword();">
                <span class="input-label">Xác nhận mật khẩu</span>
            </label>
        </div>
        <div class="list" ng-if="step === 2">
            <label class="item item-input item-stacked-label">
                <span class="assertive" ng-if="!err_email">email không đúng</span>
                <input type="email" ng-model="form_register.Email" placeholder="Nhập địa chỉ email" ng-blur="checkEmail();" autofocus />
                <span class="input-label">Email</span>

            </label>
            <label class="item item-input item-stacked-label">
                <input type="text" ng-model="form_register.SoDienThoai" placeholder="Nhập số điện thoại (vd: 090...)" />
                <span class="input-label">Số điện thoại</span>
            </label>
            <div class="row-t1 txt-center">
                <p class="lbl-line">Nhận mã pin xác minh qua</p>
                <div class="toggle-flat">
                    <div class="opt" ng-class="{'active':!form_register.IsSendEmail}" ng-click="changeSendType(0)">Điện thoại</div>
                    <div class="opt" ng-class="{'active':form_register.IsSendEmail}" ng-click="changeSendType(1)">email</div>
                </div>
            </div>
        </div>
