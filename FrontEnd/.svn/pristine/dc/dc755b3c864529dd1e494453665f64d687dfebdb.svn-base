.home .box2-1 {
    width: 100%;
    text-align: center;
    background: -webkit-linear-gradient(top, rgba(50, 140, 204, 1) 0%, #9BC9E7 100%);
    background: -o-linear-gradient(top, rgba(50, 140, 204, 1) 0%, #9BC9E7 100%);
    background: -ms-linear-gradient(top, rgba(50, 140, 204, 1) 0%, #9BC9E7 100%);
    background: linear-gradient(to bottom, rgba(50, 140, 204, 1) 0%, #9BC9E7 100%);
}
.home .wrapper2-1 {display: flex;justify-content: space-between;padding: 5px 5px 0;}
.home .wrapper2-2 {padding-bottom: 10px;}
.home .btn2-1 {
    width: 40px;
    height: 40px;
    border: none;
    background-color: transparent;
    padding: 0;
}
.home .btn2-1[class*='iconbfsprite2-']:before {
    content: "";
    display: inline-block;
    width: 40px;
    height: 40px;
}
.home .logo2-1 {margin-top: -10px;}
.home .lbl2-1 {margin: 10px 0 8px;font-size: 21px;color: #fff;text-transform: uppercase;font-weight: 600;}
.home .lbl2-2 {font-size: 14px;color: #fff;text-transform: uppercase;}
.lst2-1 .list {padding: 0;display: flex;flex-wrap: wrap;width: 100%;max-width: 100%;}
.item2-1 {width: 33.333333%;margin: 0;padding: 20px 15px;border: none;border-right: 1px solid #ddd;border-bottom: 1px solid #ddd;text-align: center;}
.item2-1:nth-child(3n+3) {border-right: none}
.icon2-1 {width: 60px;height: 60px;display: block;margin: 0 auto;position: relative;}
.lbl2-3 {font-size: 14px;font-weight: 600;}
.lbl2-3b {
    background: #F13131;
    color: #fff;
    padding: 5px 0;
    font-size: 11px;
    width: 20px;
    border-radius: 50%;
    display: block;    height: 20px;

    text-align: center;
    line-height: 10px;
    float: right;
    margin-top: -8px;
    margin-right: -8px;
}

/* Style 2 */
.home.style2-2{
    background-image: url(../../res/img/bg_home.jpg), url(res/img/bg_home.jpg);
    background-repeat: no-repeat;
    background-size: cover;
}
.home.style2-2 .box2-1,
.home.style2-2 .item2-1 {
    background: transparent;
    border:none;
}
.home.style2-2 .item2-1 {padding: 20px 10px;}
.home.style2-2 .icon2-1 {
    background-color: #fff;
    border-radius: 10px;
    -webkit-box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    -moz-box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    background-size: 560px 560px;
}
.home.style2-2 .lbl2-3 {font-size: 13px;color: #fff;margin-top: 5px;display: block;}
@media (min-width: 768px) {
    .home.style2-2 {background-size: 100% 100%;}
}

/* Style 3 */

.home.style2-3 {
    background-image: url(../../res/img/bg_home_3.png), url(res/img/bg_home_3.png);
    background-repeat: no-repeat;
    background-size: cover;
}

.home.style2-3 .box2-1,
.home.style2-3 .item2-1 {
    background: transparent;
    border: none;
}

.home.style2-3 .item2-1 {
    padding: 20px 10px;
}

.home.style2-3 .icon2-1 {
    background-color: #fff;
    border-radius: 10px;
    -webkit-box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    -moz-box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    box-shadow: 2px 3px 3px rgba(0, 0, 0, 0.4);
    background-size: 560px 560px;
}

.home.style2-3 .lbl2-3 {
    font-size: 13px;
    color: #000;
    margin-top: 5px;
    display: block;
}

@media (min-width: 768px) {
    .home.style2-3 {
        background-size: 100% 100%;
    }
}