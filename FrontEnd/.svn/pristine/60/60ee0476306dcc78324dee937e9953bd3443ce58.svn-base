.menu .scroll-content {
    top: 80px !important;
}
.menu.menu-left .bg-menu-left {
    display: block;
    width: 100%;
    height: 180px;
    background: url(../../res/img/bg-left-menu.jpg) no-repeat, url(res/img/bg-left-menu.jpg) no-repeat;
    background-size: cover;
    background-position: center center;
}
.menu.menu-left .bar.expanded {
    top: 120px !important;
    background: rgba(0,0,0,0.3);
    height: 60px !important;
}
.menu.menu-left .avatar {
    margin-left: 5px;
    margin-top: 5px !important;
    width: 50px;
    height: 50px;
}
.menu .avatar img {
    height: 50px;
    width: 50px;
    border-radius: 50%;
    border: 1px solid #BBBBBB;
}
.avatar img {
    display: block;
    width: 100%;
    height: 100%;
}
.box-user-info {
    padding-left: 10px;
}
.platform-ios .box-user-info {
	margin-top: 0 !important;
}
.menu.menu-left .bar .box-user-info .title {
    position: inherit;
    height: auto;
    margin: 5px auto 0 auto !important;
    line-height: 28px;
    text-transform: uppercase;
    text-align: left;
    font-size: 1em;
    color:#fff;
}
.menu.menu-left .bar .box-user-info .lbl-12 {
    position: inherit;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 12px;
}
.menu.menu-left .scroll-content.expanded {
    top: 180px !important;
    background-color: #263140;
}
.menu .overflow-scroll .scroll {
    background-color: #263140;
}
.menu.menu-left .disable-user-behavior .list {
    padding: 0;
    margin: 0;
}
.menu .list .item {
    border: none;
    color: #7D97A2;
}
.menu.menu-left .disable-user-behavior .item {
    margin: 0 auto 1px auto;
    background: transparent;
    color: #e5e5e5;
    border-bottom: 1px solid #222c3a;
    position: relative;
}
.menu.menu-left .list .item.selected, .menu.menu-left .list .item.active {
    color: #bf9910;
}
.menu.menu-left .list .item .icon-size1 {
    width: 24px;
    height: 20px;
    display: inline-block;
    position: absolute;
    top: 15px;
    left: 15px;
    font-size: 23px;
}
.menu.menu-left .list .item.style-2 {
    background: #304158;
    font-size: 12px;
    border-bottom: 1px solid #304158;
    padding: 5px 15px;
    border-top: none;
}
.menu.menu-left .list .item.style-1:not(.selected) {
    color: #999;
}
.icon-null {opacity: 0;}
.menu.menu-left .list .item .icon-size1[class*="ion-"] {
    background-image: none;
}
.icon-size1.ion-stats-bars:before {
    font-size: 27px;
    line-height: 25px;
}
.icon-size1.ion-android-globe:before {
    font-size: 26px;
    line-height: 20px;
}
.icon-size1.ion-home:before {
    font-size: 26px;
    line-height: 20px;
}
