.document-detail {
    background: #F2F2F2;
    padding: 0;
    max-width: 100%;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .3);
}

/*start: group thong tin chung cua van ban */

.document-detail .section-main {
    border: 1px solid #ddd;
    border-left: 0;
    border-right: 0;
    background-color: #fff;
    color: #444;
    position: relative;
    z-index: 2;
    padding: 15px 5px 15px 10px;
    font-size: 16px;
    white-space: normal;
    overflow: inherit;
    text-overflow: inherit;
    vertical-align: text-top;
}

.document-detail .section-main.layout-1 {
    background: transparent;
    border: none;
    padding-bottom: 0;
}

.lbl1-3 {
    font-size: 16px;
    white-space: normal;
    overflow: inherit;
    text-overflow: inherit;
    margin: 0 30px 0 0;
    font-weight: 500;
}

label.star-label {
    position: absolute;
    right: 0;
    top: 5px;
    float: right;
    color: #C8C8C8;
}

input.star {
    border: 0;
    width: 1px;
    height: 1px;
    overflow: hidden;
    position: absolute;
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
    opacity: 0;
}

label.star-label .star-icon {
    content: " ";
    width: 35px;
    height: 35px;
    display: inline-block;
    font-size: 1.5em;
    color: #ccc;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
}

.tag-header {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
}

.tag-header .item-tag:first-child {
    margin-right: 5px;
    margin-top: 5px;
}

.tag-header .item-tag~.item-tag,
.item-tag-list {
    border: 1px solid #e3e3e3;
    background: #f9f9f9;
    margin-left: 5px;
    margin-bottom: 5px;
    font-size: 13px;
    padding: 8px 10px;
    border-radius: 5px;
    line-height: 12px;
    box-shadow: 0 0.2px 0px rgba(0, 0, 0, .3);
}

.tag-header .item-tag.style-1.status-1 {
    color: #ff0000;
    border-color: #ff0000;
}

.tag-header .item-tag.style-1.status-2 {
    color: #fbbc05;
    border-color: #fbbc05;
}

.tag-header .item-tag.style-1.status-3 {
    color: #2ac3f3;
    border-color: #2ac3f3;
}

.document-detail p {
    white-space: normal;
    overflow: inherit;
    text-overflow: inherit;
}

.icon_title {
    width: 20px;
    height: 20px;
}

