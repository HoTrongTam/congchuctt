/*start: nut action icon-fixed o bottom */

.icon-fixed {
    position: fixed;
    bottom: 10px;
    right: 10px;
    z-index: 9;
    width: 40px;
    height: 40px;
}

.chk-list-1 {
    display: none;
}

.icon-fixed .view-icon-size1 {
    display: block;
    background-color: #F65314;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    position: absolute;
    bottom: 0;
    left: -5px;
    z-index: 5;
    -webkit-box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.3);
    box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.3);
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    -ms-transition: all 0.3s;
    transition: all 0.3s;
}

.icon-fixed .list-3 {
    position: absolute;
    bottom: 130%;
    right: -12px;
    min-width: 210px;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    -ms-transition: all 0.3s;
    transition: all 0.3s;
    transform: scale(0, 0);
    transform-origin: right bottom;
}

